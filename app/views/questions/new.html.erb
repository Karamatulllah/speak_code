<h1 align="center">Add New Question</h1>
<div align="center">
  <%= form_for(:question , :html => {class: "form-horizontal", role: "form"}, url: questions_path) do |f| %>

    <div class="form-group">

    <div class="control-label col-sm-2">

    <%= f.label :question %>

    </div>

    <div class="col-sm-8">

    <%= f.text_area :question, class: "form-control", :rows => 10, style: 'width:50%;', placeholder: "Enter New Question", autofocus: true %>

    </div>

    </div>

    <div class="form-group">

    <div class="col-sm-offset-2 col-sm-10">

    <%= f.submit "Submit", class: 'btn btn-primary btn-lg' %>

    </div>

    </div>

  <% end %>
</div>
