<h1 align="center">add answer to <%= @question.question %></h1>

<div align="center">
  <%= form_for(:answer , :html => {class: "form-horizontal", role: "form"}, url: question_answers_path()) do |f| %>

    <div class="form-group">

    <div class="control-label col-sm-2">

    <%= f.label :answer %>

    </div>

    <div class="col-sm-8">

    <%= f.text_area :answer, class: "form-control", :rows => 10, style: 'width:50%;', placeholder: "Give an answer", autofocus: true %>

    </div>

    </div>

    <div class="form-group">

    <div class="col-sm-offset-2 col-sm-10">

    <%= f.submit "Enter", class: 'btn btn-primary btn-lg' %>

    </div>

    </div>

  <% end %>
</div>
